{
  "name": "realizehit-server-api",
  "version": "0.0.1",
  "description": "realizehit api server",
  "main": "lib/server.js",
  "scripts": {
    "start": "node server.js",
    "test-jshint": "jshint .",
    "test-mocha": "mocha --globals setImmediate,clearImmediate --check-leaks --colors -t 10000 --reporter spec $(find test/* -name '*.test.js')",
    "test": "for kind in jshint mocha; do npm run test-$kind; [ $? -ne 0 ] && exit 1; done; exit 0",
    "preversion": "npm test",
    "postversion": "git push origin master; git push origin --tags; npm publish",
    "build-docker": "docker build -t realizehit/server-api ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/realizehit/server-api.git"
  },
  "keywords": [
    "realizehit",
    "api",
    "server",
    "redis"
  ],
  "author": "Jos√© Moreira <jose.moreira@findhit.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/realizehit/server-api/issues"
  },
  "homepage": "https://github.com/realizehit/server-api#readme",
  "dependencies": {
    "bluebird": "^3.1.1",
    "body-parser": "^1.14.2",
    "express": "^4.13.3",
    "ioredis": "^1.14.0",
    "object-assign": "^4.0.1",
    "realizehit-subscription": "^0.1.2"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "jshint": "^2.9.1",
    "mocha": "^2.3.4",
    "supertest": "^1.1.0"
  }
}
